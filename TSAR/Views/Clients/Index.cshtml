@model IEnumerable<TSAR.Models.Client>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutOther.cshtml";
}

<h2>List of Clients</h2>
<p>
    @using (Html.BeginForm("Index", "Clients", FormMethod.Get))
    {
        <b>Search by:</b><font color="Black"> @Html.TextBox("Search")<input type="submit" value="Search" style="color: black" /></font>}
</p>
<p>
    <div align="center">
        <a id="button" href="@Url.Action("Create")" class="btn btn-primary">Create</a>
    </div>
</p>
<div style="overflow-x: auto">
<table class="table bg-light-gray">
    <tr>


        <th>
            @Html.DisplayNameFor(model => model.ClientName)
        </th>

        <th>
             @Html.DisplayNameFor(model => model.ClientAddress)
        </th>

        <th>
             @Html.DisplayNameFor(model => model.ContactNumber)
        </th>


        <th>
             @Html.DisplayNameFor(model => model.Email)
        </th>

        @*<th>
                    <font color="white"> @Html.DisplayNameFor(model => model.ProjectLeader)</font>
                </th>*@



        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
               @Html.DisplayFor(modelItem => item.ClientName)
            </td>
            <td>
                   @Html.DisplayFor(modelItem => item.ClientAddress)
            </td>

            <td>
                  @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>

            <td>
                  @Html.DisplayFor(modelItem => item.Email)
            </td>

            @*<td>
                        <font color="gold"> @Html.DisplayFor(modelItem => item.ProjectLeader)</font>
                    </td>*@


            <td>
                <input type="button" title="Delete" value="Delete" class="btn btn-primary" onclick="location.href='@Url.Action("Delete", "Clients", new { id = item.Id })'" />
            </td>
            <td>
                <input type="button" title="Delete" value="Edit" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Clients", new { id = item.Id })'" />
            </td>
            <td>
                <input type="button" title="Delete" value="Details" class="btn btn-primary" onclick="location.href='@Url.Action("Details", "Clients", new { id = item.Id })'" />
            </td>
        </tr>
    }

</table>
    </div>
    @Html.ActionLink("Back to previous page", null, null, null, new { href = Request.UrlReferrer })
    <div>
        <a href="@Request.UrlReferrer" class="btn btn-primary btn-lg" title="Back to list">
            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        </a>
    </div>
    