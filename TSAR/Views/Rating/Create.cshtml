@model TSAR.Models.Rating

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutOther.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Rating</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div align="center">
                @Html.LabelFor(model => model.ConsultantNum, "Consultant Name", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-offset-5 col-md-2">
                @Html.DropDownList("ConsultantNum", null, "--Select New--", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ConsultantNum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div align="center">
                @Html.LabelFor(model => model.Rate, htmlAttributes: new { @class = "control-label" })
            </div>
            <div align ="center">
                @Html.RadioButtonFor(model => model.Rate, "Excellent") Excellent
           
                @Html.RadioButtonFor(model => model.Rate, "Good") Good
                @Html.RadioButtonFor(model => model.Rate, "Average")Average
                @Html.RadioButtonFor(model => model.Rate, "Poor") Poor
                @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div align="center">
                @Html.LabelFor(model => model.Reason, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-offset-4 col-md-4">
                @Html.EditorFor(model => model.Reason, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Reason, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div align="center">
                @Html.LabelFor(model => model.ClientName, htmlAttributes: new { @class = "control-label" })
            </div>
                <div class="col-md-offset-5 col-md-2">
                    @Html.EditorFor(model => model.ClientName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ClientName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div align="center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
        }

        <div>
            <div align="center">
                <a id="button" href="@Url.Action("Index")" class="btn btn-primary">Back to the list</a>
            </div>
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
