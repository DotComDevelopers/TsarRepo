@model IEnumerable<TSAR.Models.ConsultantRegister>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutOther.cshtml";
}

<h2>Clock-In History</h2>

<p>
    @if (ViewBag.HasSentRegister == false)
    {
        <div align="center">
            <a id="button" href="@Url.Action("Create")" class="btn btn-primary">Send Register</a>
        </div>



    }
    else
    {
        <h2>You have already sent the register for today</h2>
    }

</p>
<div style="overflow-x: auto">
<table class="table bg-light-gray">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Consultant.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BarcodeScanned)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Consultant.FirstName)
                </td>
                <td>
                    @if (Model != null)
                    {
                        var x = item.DateTime.ToLongDateString();
                        @Html.DisplayFor(xx => x)
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BarcodeScanned)
                </td>
                <td></td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>
                <h2 style="color: white">Nothing to display</h2>
            </td>
        </tr>
    }


</table>
   </div>
