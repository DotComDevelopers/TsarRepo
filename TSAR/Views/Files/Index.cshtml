@model IEnumerable<TSAR.Models.File>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutOther.cshtml";
}

<h2>Files</h2>
<p>
    <div align="center">
        <a id="button" href="@Url.Action("Create")" class="btn btn-primary">Create</a>
    </div>
</p>
<div style="overflow-x: auto">
    <table class="table bg-light-gray">
        <tr>
            <th>
                    @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.FileType)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                       @Html.DisplayFor(modelItem => item.FileName)
                </td>
                <td>
                         @Html.DisplayFor(modelItem => item.FileType)
                </td>
               
               
                <td>
                    <input type="button" title="Edit" value="Edit" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Files", new { id = item.FileId })'" />


                    <input type="button" title="Download" value="Download" class="btn btn-primary" onclick="location.href='@Url.Action("Download", "Files", new { id = item.FileId })'" />

                    <input type="button" title="Delete" value="Delete" class="btn btn-primary" onclick="location.href='@Url.Action("Delete", "Files", new { id = item.FileId })'" />
                </td>
         
     
            </tr>
        }
    </table>
    </div>