@model TSAR.Models.Budget

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutOther.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Budget</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BudgetCode)

        <div class="form-group">
            <div align="center">
                @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-2 col-md-offset-5">
                @Html.DropDownList("ClientName", null, "---Select New---", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div align="center">
                @Html.LabelFor(model => model.Balance, htmlAttributes: new { @class = "control-label" })
            </div>
                <div class="col-md-2 col-md-offset-5">
                    @Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Balance, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
            <div align="center">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
