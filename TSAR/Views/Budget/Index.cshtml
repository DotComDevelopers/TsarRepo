@model IEnumerable<TSAR.Models.Budget>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutOther.cshtml";
}

<h2>Index</h2>

<p>
    <div align="center">
        <a id="button" href="@Url.Action("Create")" class="btn btn-primary">Create</a>
    </div>
</p>
<table class="table">
    <tr>
        <th>
            <font color="White">@Html.DisplayNameFor(model => model.Client.ClientName) </font>
        </th>
        <th>
            <font color="White">    @Html.DisplayNameFor(model => model.Balance)</font>
        </th>
        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <font color="gold">      @Html.DisplayFor(modelItem => item.Client.ClientName)</font>
            </td>
            <td>
                <font color="gold">       @Html.DisplayFor(modelItem => item.Balance)</font>
            </td>
            <td>

                <input type="button" title="Edit" value="Edit" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Budget", new { id = item.BudgetCode })'" />


                <input type="button" title="Edit" value="Details" class="btn btn-primary" onclick="location.href='@Url.Action("Details", "Budget", new { id = item.BudgetCode })'" />

                <input type="button" title="Delete" value="Delete" class="btn btn-primary" onclick="location.href='@Url.Action("Delete", "Budget", new { id = item.BudgetCode })'" />

            </td>
        </tr>
    }

</table>