@model IEnumerable<TSAR.Models.Budget>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutOther.cshtml";
}

<h2>Index</h2>
<p>
    @using (Html.BeginForm("Index", "Budget", FormMethod.Get))
    {
        <b>Search by:</b><font color="Black"> @Html.TextBox("Search")<input type="submit" value="Search" style="color: black" /></font>}
</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <font color = "White">@Html.DisplayNameFor(model => model.Id) </font>  
        </th>
        <th>
            <font color="White">    @Html.DisplayNameFor(model => model.Balance)</font> 
</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <font color="gold">      @Html.DisplayFor(modelItem => item.Id)</font> 
</td>
        <td>
            <font color="gold">       @Html.DisplayFor(modelItem => item.Balance)</font> 
</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BudgetCode }) |
            @Html.ActionLink("Details", "Details", new { id=item.BudgetCode }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BudgetCode })
        </td>
    </tr>
}

</table>
