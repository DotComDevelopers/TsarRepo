}

<h2>@ViewBag.ClientName's Quotations</h2>
<br />



<p>
    @*@Html.ActionLink("Create New Application", "Create")*@
    <a id="button" href="@Url.Action("GetQuotation")" class="btn btn-primary">Create new Quotation</a>
</p>
<br />
<div style="overflow-x: auto">
    <table class="table bg-light-gray">
        <tr>
