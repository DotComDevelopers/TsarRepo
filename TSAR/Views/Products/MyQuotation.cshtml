            @Html.DisplayNameFor(model => model.FirstName)
        </th>*@
    <th>
        @Html.DisplayNameFor(model => model.ProductName)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Price)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Description)
    </th>
