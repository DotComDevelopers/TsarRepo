@model TSAR.Models.Subscription

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutOther.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Subscription</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div align="center">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-6">

                @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-11" align="center">
                <input type="submit" value="Subscribe" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div align="center">
    <a id="button" href="@Url.Action("Index")" class="btn btn-primary">If you have an active subscription click here</a>
</div>
@*<div class="col-md-11" align="center">
    @Html.ActionLink("If you have an active subscription click here.","Index")
</div>*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
