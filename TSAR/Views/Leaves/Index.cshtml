@model IEnumerable<TSAR.Models.Leave>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutOther.cshtml";
}

<h2>Index</h2>

<p>
    <div align="center">
        <a id="button" href="@Url.Action("Create")" class="btn btn-primary">Create</a>
    </div>
</p>
<table class="table">
    <tr>
        <th>
            <font color="white">   @Html.DisplayNameFor(model => model.FirstName)</font>
        </th>
        <th>
            <font color="white">     @Html.DisplayNameFor(model => model.ApprovedBy)</font>
        </th>
        <th>
            <font color="white">     @Html.DisplayNameFor(model => model.IsConfirmed)</font>
        </th>
        <th>
            <font color="white">     @Html.DisplayNameFor(model => model.LeaveDecsription)</font>
        </th>
        <th>
            <font color="white">       @Html.DisplayNameFor(model => model.LeaveDate)</font>
        </th>
        <th>
            <font color="white">       @Html.DisplayNameFor(model => model.ReturnDate)</font>
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <font color="gold">    @Html.DisplayFor(modelItem => item.FirstName)</font>
        </td>
        <td>
            <font color="gold">    @Html.DisplayFor(modelItem => item.ApprovedBy)</font>
        </td>
        <td>
            <font color="gold">     @Html.DisplayFor(modelItem => item.IsConfirmed)</font>
        </td>
        <td>
            <font color="gold">      @Html.DisplayFor(modelItem => item.LeaveDecsription)</font>
        </td>
        <td>
            <font color="gold">      @Html.DisplayFor(modelItem => item.LeaveDate)</font>
        </td>
        <td>
            <font color="gold">      @Html.DisplayFor(modelItem => item.ReturnDate)</font>
        </td>
        <td>
        <td>
            <input type="button" title="Edit" value="Edit" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Leaves", new { id = item.LeaveId })'" />


            <input type="button" title="Edit" value="Details" class="btn btn-primary" onclick="location.href='@Url.Action("Details", "Leaves", new { id = item.LeaveId })'" />

            <input type="button" title="Delete" value="Delete" class="btn btn-primary" onclick="location.href='@Url.Action("Delete", "Leaves", new { id = item.LeaveId })'" />
        </td>
        </td>
    </tr>
}

</table>
