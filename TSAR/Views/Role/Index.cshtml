@using TSAR.Models
@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_LayoutOther.cshtml";
    ApplicationDbContext db = new ApplicationDbContext();
}
}

<h2>Roles Listing </h2>

@Html.ActionLink("Create New Role", "Create") | @Html.ActionLink("Manage User Role", "ManageUserRoles")
<hr />
<div>
    @foreach (var role in db.Roles.ToList())
    {
        <p>
            <strong>@role.Name | </strong>
            <span onclick="return confirm('Are you sure yo wan to delete?')"><a href="/Role/Delete?RoleName=@role.Name" class="delLink" style="color:red;">Delete</a></span> |
            @Html.ActionLink("Edit", "Edit", new { roleName = @role.Name })
        </p>
    }
</div>

