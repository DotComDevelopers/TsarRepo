<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MobileTsar.ViewModels;assembly=MobileTsar"
             x:Class="MobileTsar.Views.LoginPage">
  <!--<Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />-->
  <ContentPage.BindingContext>
    <viewModels:LoginViewModel></viewModels:LoginViewModel>
  </ContentPage.BindingContext>
  <StackLayout Orientation="Vertical">
    <Entry Text="{Binding Username}" Placeholder="Your Username"></Entry>
    <Entry Text="{Binding Password}" IsPassword="True" Placeholder="Your Password"></Entry>
    <Button Command="{Binding LoginCommand}" Text="Login"></Button>
    <Button Clicked="Button_OnClicked" Text="Get Timesheets"></Button>
  </StackLayout>
  
</ContentPage>